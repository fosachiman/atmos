
<canvas class="icon" id="main-icon" icon="<%=weather.currently.icon%>" width="128" height="128"></canvas>
<div class="main-weather">
<h3 class="location"><%=location%></h3>
<p><%=weather.currently.temperature%></p>
<p>Feels like: <%=weather.currently.apparentTemperature%></p>
</div>
<% if (weather.minutely != undefined) { %>
<p><%=weather.minutely.summary%></p>
<% } %>
<p><%=weather.hourly.summary%></p>
<p class="humidity">Humidity: <%=weather.currently.humidity%></p>
<p class="wind">Wind: <%=weather.currently.windSpeed%></p>
<p class="visibility">Visibility: <%=weather.currently.visibility%></p>
</br>

