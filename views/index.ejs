<!DOCTYPE html>
<html>
  <% include ./partials/head %>
  <body>
    <div class="header">
      <h1 class="logo"><a href='/'><%= title %></a></h1>
      <form method="post" action="/">
        <input class="input" type="text" name="location" placeholder="Location">
        <input class="submit" type="submit" value="Get Weather">
      </form>
      <div>
        <a href="/auth/register" src="register">Register</a>
        <a href="/auth/login" src="login">Log In</a>
      </div>
    </div>
  <div class="body-container">
    <div class="box1">
      <% include ./partials/daily-box %>
    </div>
    <div class="box2">
      <% include ./partials/main_box %>
    </div>
    <div class="box3">
      <p>Sign in to view your locations</p>
      <%secondaries.forEach(function(secondary) { %>
        <a class="location-right" href="<%="/" + secondary%>" src="<%=secondary%>"><%=secondary%></a>
      <% }) %>
    </div>
  </div>
      <% include ./partials/scripts %>
  </body>
</html>
